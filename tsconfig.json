{
	"version": "2.2.0",
	"compilerOptions": {
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "umd",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"outDir": "_build/",
		"removeComments": false,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "es5"
	},
	"include": [
		"./src/**/*.ts",
		"./src/examples/**/*.ts",
		"./tests/**/*.ts",
		"./typings/index.d.ts"
	],
	"exclude": [
		"_build",
		"dist",
		"node_modules"
	]
}
